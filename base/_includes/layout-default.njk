<!doctype html>
{% block htmlTag %}
<html lang="{{ site.lang }}" dir="{{ site.dir }}">
{% endblock htmlTag %}
  {% include '_block/head.njk' %}
  {% block bodyTag %}
  <body layout="{{ layout }}">
  {% endblock bodyTag %}

    {% block themeBody %}
    {% endblock themeBody%}

    <header id="main-header">
      <div class="content-area">
        {% block header_snippets %}
          {% include 'snippet/header-collection-header.njk' %}
          {% include 'snippet/header-logo-background.njk' %}
          {% include 'snippet/header-logo.njk' %}
          {% include 'snippet/header-mobile-menu-trigger.njk' %}
          {% include 'snippet/header-social-links.njk' %}
        {% endblock header_snippets%}
      </div>
    </header>

    {% block main %}
      <div id="content-wrapper">
        <div class="content-area">
          <main class="markdown-body">
            {{ content }}
          </main>
        </div>
      </div>
    {% endblock main %}

    <footer id="main-footer">
      {% block footer_snippets %}
        {% include 'snippet/footer-description.njk' %}
        {% include 'snippet/footer-menu.njk' %}
        {% include 'snippet/footer-newsletter.njk' %}
      {% endblock footer_snippets %}
    </footer>
    {% include 'snippet/bottom-google-analytics.njk' %}
    {% include 'snippet/bottom-init-navigation.njk' %}
    {% include 'snippet/bottom-register-service-worker.njk' %}
    
  </body>
</html>
